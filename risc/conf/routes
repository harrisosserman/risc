# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index()
POST    /game                       controllers.API.createGame()
GET		/game/:id					controllers.API.getWaitingPlayers(id: String)
POST 	/game/:id 					controllers.API.commitTurn(id: String)
POST	/game/:id/start				controllers.API.startGame(id: String)
GET 	/game/:id/map 				controllers.API.getMap(id: String)
POST	/game/:id/exit				controllers.API.exit(id: String)
GET 	/game/:id/mapReady			controllers.API.isMapReady(id: String)
DELETE	/game/:id/reset				controllers.API.reset(id: String)

POST	/player 					controllers.API.createPlayer()
GET 	/player/:username			controllers.API.getPublicUserInfo(username: String)
POST 	/player/:username/login 	controllers.API.logUserIn(username: String)

#   API calls that Harris made for testing the front end
GET     /test/player/:username          controllers.TestAPI.getTestUsername(username: String)
POST    /test/player/:username/login    controllers.TestAPI.loginTest(username: String)
POST    /test/player                    controllers.TestAPI.createTestPlayer()
GET     /test/game                      controllers.TestAPI.getTestGames()
GET     /test/game/:id                  controllers.TestAPI.getTestGame(id: String)


POST    /test/game                  controllers.TestAPI.createTestGame()
POST    /test/game/:id/start        controllers.TestAPI.startTestGame(id: String)

GET     /test/game/:id/map          controllers.TestAPI.getTestMap(id: String)
GET     /test/game/:id/mapReady     controllers.TestAPI.getTestMapReady(id: String)
POST    /test/game/:id              controllers.TestAPI.commitTestTurn(id: String)
GET     /test/game/:id/polling      controllers.TestAPI.getTestMapPolling(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /public/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
